{% extends 'AppBundle::base.html.twig' %}
{% import 'AppBundle::Macros/macros.html.twig' as macros %}
{% block title %} Mes artistes {% endblock %}
{% block body %}

    <h1>Les artistes</h1>


    {{ macros.link_button('app_artists_new','Création d\'artistes') }}


    {{ render(controller('AppBundle\\Controller\\DefaultController:menu')) }}



    <table>
        <thead>
        <tr>
            <th>Nom de l'artiste</th>
            <th>Redirection json</th>
            <th>id de l'artiste</th>
            <th>Type de l'artiste</th>
            <th>photo d'artiste</th>
            <th>genre de l'artiste</th>

        </tr>
        </thead>

        <tbody>
        {% for artist in artists %}

            <tr>
                <td>
                    <a href="{{ path('app_artists_param',{'id':artist.id}) }}">
                        <h2>{{ artist.name }}</h2>
                    </a>
                </td>

                <td>
                    <a href="{{ path('app_artists_json',{'id':artist.id}) }}">
                        <h2>{{ artist.name  }} en json</h2>
                    </a>
                </td>
                <td> {{ artist.id }}</td>
                <td> {{ artist.type }}</td>
                <td> {{ artist.picture }}</td>
                <td> {{ artist.genre }}</td>

            </tr>

        {% endfor %}

        </tbody>

    </table>



    <a href="{{ path('app_homepage') }}">
        <h2>Retour à l'accueil</h2>
    </a>







{% endblock %}
{% block javascripts %}{% endblock %}
